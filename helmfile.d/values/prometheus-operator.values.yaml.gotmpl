grafana:
  ingress:
    hosts:
    - grafana.{{ exec "kubectl" (list "get" "svc" "ingress-nginx-controller" "-n" "ingress-nginx" "-o" "jsonpath={.status.loadBalancer.ingress[0].ip}" ) }}.xip.io
    tls:
    - hosts:
      - grafana.{{ exec "kubectl" (list "get" "svc" "ingress-nginx-controller" "-n" "ingress-nginx" "-o" "jsonpath={.status.loadBalancer.ingress[0].ip}" ) }}.xip.io
      secretName: grafana-tls
